<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style type="text/css">
      body {
        text-align: center;
        color: white;
        {{#if lastScanned}}
        background-color: red;
        {{else}}
        background-color: green;
        {{/if}}
      }
      div {
        margin: 0 auto;
        font-size: 20em;
        font-family: Arial;
      }
    </style>
  </head>
  <body>
    <div>
      {{#if lastScanned}}
      X
      {{else}}
      &#10004;
      {{/if}}
    </div>
    {{#if lastScanned}}
    Last scanned: {{lastScanned}}
    {{/if}}
  </body>
</html>